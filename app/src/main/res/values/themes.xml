<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gardenry" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">#10551F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="fontFamily">@font/josefin_font_family</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewTextStyle" parent="Theme.Gardenry">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@color/white</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">Search from your notes</item>
    </style>

    <style name="note_item">
        <item name="background">@drawable/rounded_corners_white</item>
    </style>

    <style name="notes">
        <item name="android:backgroundTint">@color/black</item>
        <item name="background">@drawable/rounded_corners_white</item>
    </style>
</resources>